# Treasure Coast AI Platform - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE (Required)
# =============================================================================
# PostgreSQL connection string - provided by Replit's built-in database
DATABASE_URL=postgresql://user:password@host:5432/database

# =============================================================================
# SESSION & SECURITY (Required)
# =============================================================================
# Secret key for session encryption - use a long random string (min 32 chars)
SESSION_SECRET=your-session-secret-at-least-32-characters

# Secret key for widget token signing - use a long random string
WIDGET_TOKEN_SECRET=your-widget-token-secret-at-least-32-characters

# Session idle timeout in minutes (default: 30)
SESSION_IDLE_TIMEOUT_MINUTES=30

# =============================================================================
# OPENAI / AI (Required for AI features)
# =============================================================================
# OpenAI API configuration - provided via Replit AI Integrations
AI_INTEGRATIONS_OPENAI_API_KEY=sk-your-openai-api-key
AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1

# =============================================================================
# ADMIN ACCOUNTS (Optional - defaults provided)
# =============================================================================
# Default super admin credentials
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=your-secure-admin-password

# Default staff account credentials
DEFAULT_STAFF_USERNAME=staff
DEFAULT_STAFF_PASSWORD=your-secure-staff-password
DEFAULT_STAFF_CLIENT_ID=faith_house

# Demo account password (for demo tenants)
DEMO_ACCOUNT_PASSWORD=demo123

# =============================================================================
# LOGIN SECURITY (Optional - defaults provided)
# =============================================================================
# Max login attempts before lockout (default: 5)
LOGIN_MAX_ATTEMPTS=5

# Lockout duration in minutes (default: 15)
LOGIN_LOCKOUT_MINUTES=15

# Login attempt window in minutes (default: 15)
LOGIN_WINDOW_MINUTES=15

# =============================================================================
# NOTIFICATIONS (Optional)
# =============================================================================
# Twilio SMS notifications
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Resend email notifications
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# SMTP email configuration (alternative to Resend)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-password
# EMAIL_FROM=noreply@treasurecoastai.com

# =============================================================================
# WIDGET CONFIGURATION (Optional)
# =============================================================================
# Allowed origins for widget CORS (comma-separated)
# WIDGET_ALLOWED_ORIGINS=https://example.com,https://another.com

# Enable widget test mode in production (default: false)
# WIDGET_TEST_MODE=true

# =============================================================================
# DATA RETENTION (Optional - defaults provided, in days)
# =============================================================================
# RETENTION_CHAT_SESSIONS_DAYS=365
# RETENTION_LEADS_DAYS=730
# RETENTION_APPOINTMENTS_DAYS=730
# RETENTION_ANALYTICS_DAYS=180
# RETENTION_NOTIFICATION_LOGS_DAYS=90
# RETENTION_SESSION_STATES_DAYS=30
# RETENTION_CONVERSATIONS_DAYS=365

# =============================================================================
# DEMO MODE (Optional)
# =============================================================================
# Enable demo safe mode (prevents destructive operations)
# DEMO_SAFE_MODE=true

# =============================================================================
# DEBUGGING (Optional)
# =============================================================================
# Enable debug logging
# LOG_LEVEL=debug

# Request timeout in milliseconds (default: 30000)
# REQUEST_TIMEOUT_MS=30000

# =============================================================================
# PAYMENT PROCESSING (DISABLED - Option A: Zero-Stripe)
# =============================================================================
# This platform has NO payment processing. Booking uses redirect-only to 
# external provider URLs (HTTPS only). Do NOT add Stripe keys or payment code.
# See NO_PAYMENTS_COMPLIANCE.md for details.

# =============================================================================
# RUNTIME (Auto-set)
# =============================================================================
# Server port - defaults to 5000
PORT=5000

# Environment mode
NODE_ENV=development

# =============================================================================
# REPLIT-SPECIFIC (Auto-provided by Replit)
# =============================================================================
# These are automatically set by Replit and should not be manually configured:
# REPLIT_DOMAINS - Comma-separated list of domains
# REPLIT_DEV_DOMAIN - Development domain
# REPLIT_DEPLOYMENT - Set to "1" in production deployments
# REPL_IDENTITY - Replit identity token
